<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/back_down">

        <RelativeLayout
            android:id="@+id/tiilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp">

            <ImageView
                android:id="@+id/insicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/update_isn" />

        </RelativeLayout>

        <com.moxi.systemapp.views.ProgressView
            android:id="@+id/progess"
            android:layout_width="400dp"
            android:layout_height="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/tiilt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
        <LinearLayout
            android:layout_width="500dp"
            android:id="@+id/layout_hitn"
            android:layout_below="@+id/progess"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/download_hitn"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_24"/>
        <!--<TextView-->
            <!--android:id="@+id/download_size"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="2"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:gravity="left"-->
            <!--android:textSize="@dimen/moxi_text_size_21"/>-->
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
