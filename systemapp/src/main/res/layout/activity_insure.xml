<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_pen"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:background="@drawable/arc20_di_white_bian_back"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/moxi_text_size_22"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="屏幕模块升级"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/moxi_text_size_18"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/hitn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/moxi_text_size_18"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="@drawable/back_black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/insure"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/arc_di_black"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_20"
            android:gravity="center"
            android:text="确定"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/quit"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/arc_di_black"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_20"
            android:gravity="center"
            android:text="取消"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
