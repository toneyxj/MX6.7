<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_bind_base"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/mx_base_title_layout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:src="@mipmap/img_mx_dd_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/mx_img_input_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/mx_img_login_username" />

        <com.mx.user.view.XEditText
            android:id="@+id/xet_dd_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:imeOptions="actionDone"
            android:paddingLeft="10dp"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_22" />

        <ImageView
            android:id="@+id/img_clear_dd_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@mipmap/mx_img_login_clear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dd_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@mipmap/mx_img_input_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/mx_img_login_password" />

        <com.mx.user.view.XEditText
            android:id="@+id/xet_dd_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:paddingLeft="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_22" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_dd_bind"
        android:layout_width="496dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/white_to_font">

        <TextView
            android:id="@+id/tv_bind_dd_username"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/moxi_shape_black_corner_40"
            android:gravity="center"
            android:text="绑定当当账号"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />

        <TextView
            android:id="@+id/tv_dd_register"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_bind_dd_username"
            android:gravity="center"
            android:text="没有账号？去注册"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/moxi_text_size_22" />

    </RelativeLayout>
</LinearLayout>