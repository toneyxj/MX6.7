<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mx.exams">


    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:name=".application.ExamsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/img_new_main_htttl"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <activity
            android:name=".activity.MXPracticeActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MXWriteHomeWorkActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MXExamsListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MXRequirementOptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MXWriteExamsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MXSubjectExamsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MXHistoryActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MXExamsSubjectiveActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.WrongSubjectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MXErrorExamsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WrongSubjectInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SynchronousActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ExamsTestActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <service
            android:name=".db.DownDbService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>