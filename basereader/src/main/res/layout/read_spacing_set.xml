<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include
        android:id="@+id/activity_add_roster_title_ll"
        layout="@layout/common_title"
        />


    <com.dangdang.zframework.view.DDImageView
        android:id="@+id/read_spacing_sample"
        android:layout_below="@+id/activity_add_roster_title_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />
    
    <com.dangdang.zframework.view.DDTextView
        android:id="@+id/read_spacing_gesturetip"
        android:layout_above="@+id/read_spacing_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="#BF000000"
        android:text="@string/read_spacing_gesture_tip"
        android:textColor="@color/white"
        android:textSize="15dp" 
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dip"/>

    <RelativeLayout
        android:id="@+id/read_spacing_rect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <com.dangdang.zframework.view.DDImageView
            android:id="@+id/read_spacing_up"
            android:layout_width="wrap_content"
            android:contentDescription="放大行间距"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/read_spacing_up" />

        <com.dangdang.zframework.view.DDImageView
            android:id="@+id/read_spacing_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="缩小行间距"
            android:layout_below="@+id/read_spacing_up"
            android:background="@drawable/read_spacing_down" />

        <RelativeLayout
            android:id="@+id/read_spacing_rect_right"
            android:layout_toRightOf="@+id/read_spacing_down"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true">

            <com.dangdang.zframework.view.DDImageView
                android:id="@+id/read_spacing_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:contentDescription="放大页边距"
                android:background="@drawable/read_spacing_left" />

            <com.dangdang.zframework.view.DDImageView
                android:id="@+id/read_spacing_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="缩小页边距"
                android:layout_toRightOf="@+id/read_spacing_left"
                android:background="@drawable/read_spacing_right" />


            <com.dangdang.zframework.view.DDImageView
                android:id="@+id/read_spacing_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/read_spacing_right"
                android:layout_marginLeft="30dip"
                android:contentDescription="重置"
                android:background="@drawable/read_spacing_reset" />
            
            <com.dangdang.zframework.view.DDImageView
                android:id="@+id/read_spacing_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/read_spacing_reset"
                android:layout_marginLeft="15dip"
                android:contentDescription="保存"
                android:background="@drawable/read_spacing_ok" />
            
        </RelativeLayout>
    </RelativeLayout>

    <com.dangdang.zframework.view.DDTextView
        android:id="@+id/read_spacing_pagetip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"
        android:layout_alignParentBottom="true"
        android:background="#BF000000"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="15dp" 
        android:gravity="center"
        android:visibility="gone"/>
    
</RelativeLayout>