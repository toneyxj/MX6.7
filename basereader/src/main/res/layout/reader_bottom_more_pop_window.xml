<?xml version="1.0" encoding="utf-8"?>
<com.dangdang.reader.dread.view.toolbar.BottomMorePopView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >
        <com.dangdang.reader.dread.view.ProgressTrainingWheel
            android:id="@+id/read_bottom_training_dayfinishrate"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:contentDescription="阅读完成率" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <com.dangdang.zframework.view.DDTextView
                    android:id="@+id/read_finishrate_wheel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="13dp" />
            </LinearLayout>
    </RelativeLayout>

</com.dangdang.reader.dread.view.toolbar.BottomMorePopView>