<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/corner_white"
              android:orientation="vertical">


    <com.dangdang.zframework.view.DDTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="@string/buy_chapter_dialog_title"
        android:textColor="@color/text_gray_333333"
        android:textSize="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal">

        <com.dangdang.zframework.view.DDTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/buy_dialog_buy_name"
            android:textColor="@color/text_gray_666666"
            android:textSize="14dp"/>

        <com.dangdang.zframework.view.DDTextView
            android:id="@+id/dialog_buy_chapter_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <com.dangdang.zframework.view.DDTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="需要支付："
            android:textColor="@color/text_gray_666666"
            android:textSize="14dp"/>

        <com.dangdang.zframework.view.DDTextView
            android:id="@+id/dialog_buy_chapter_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4555铃铛"
            android:textColor="@color/blue_2390ec"
            android:textSize="14dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:background="@color/gray_d2d2d2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="18dp"
        android:gravity="center_vertical"
        >

        <com.dangdang.zframework.view.DDTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="铃铛余额"
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <com.dangdang.zframework.view.DDTextView
            android:id="@+id/dialog_buy_chapter_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="521220铃铛"
            android:textColor="@color/blue_2390ec"
            android:textSize="14dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_d2d2d2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <com.dangdang.zframework.view.DDTextView
            android:id="@+id/dialog_buy_chapter_auto_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_select_circle_selector"/>

        <com.dangdang.zframework.view.DDTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="left|center_vertical"
            android:text="@string/buy_dialog_autobuy"
            android:textColor="@color/black"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <com.dangdang.zframework.view.DDTextView
            android:id="@+id/dialog_buy_chapter_cancel_chapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_dadada"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="取消购买"
            android:textColor="@color/text_gray_333333"/>

        <com.dangdang.zframework.view.DDTextView
            android:id="@+id/dialog_buy_chapter_buy_chapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_dadada"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="确认购买"
            android:textColor="@color/red_f15353"/>
    </LinearLayout>


    <com.dangdang.zframework.view.DDTextView
        android:id="@+id/dialog_buy_chapter_recharge"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_corner_dadada"
        android:gravity="center"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text="@string/buy_dialog_buy_month_not_enough"
        android:textColor="@color/red_f15353"/>
</LinearLayout>