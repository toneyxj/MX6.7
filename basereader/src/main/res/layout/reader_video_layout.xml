<?xml version="1.0" encoding="utf-8"?>
<com.dangdang.reader.dread.view.VideoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/video_play_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="left|top" >

        <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="0dip"
            android:layout_height="0dip" />

        <com.dangdang.reader.dread.view.VideoControlRelativeLayout
            android:id="@+id/video_control_vcrl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#a0000000"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/progressRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
        </ProgressBar>
    </RelativeLayout>

</com.dangdang.reader.dread.view.VideoView>