<?xml version="1.0" encoding="utf-8"?>
<com.dangdang.reader.dread.view.toolbar.DirPreviewToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/read_toolbar_preview_bg" >

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:background="@color/black" />

    <ListView
        android:id="@+id/preview_chapter_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

    <com.dangdang.zframework.view.DDTextView
        android:id="@+id/preview_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|right"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <com.dangdang.zframework.view.DDImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roll_bg" />

</com.dangdang.reader.dread.view.toolbar.DirPreviewToolbar>