<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="11dp">
        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/back"
            android:text="返回"
            android:textSize="@dimen/title_left_size"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/white_to_font"/>

        <TextView
            android:id="@+id/show_current_year_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2016年\t\t九月"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/title_left_size"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="日历"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/arc_di_black"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/arc_left_di_white"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="月"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_22"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/daily"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="日"
                android:textColor="@color/colorWihte"
                android:textSize="@dimen/moxi_text_size_22"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/more_motification"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_event"
            android:background="@drawable/white_to_font" />

    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/colorGray"/>

    <TextView
        android:id="@+id/current_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:gravity="center"
        android:visibility="gone"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="今天 2016年09月05日"
        android:textColor="@color/colorWihte"
        android:textSize="@dimen/moxi_text_size_24"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <TextView
        android:id="@+id/next_year_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWihte"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="2016年09月"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/moxi_text_size_26"
        android:textStyle="bold" />
        <ImageButton
            android:id="@+id/select_data"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/white_to_font"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/select_data"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWihte"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SUN"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MON"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TUE"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WED"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="THU"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FRI"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_20" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SAT"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_20" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack" />

        <com.moxi.calendar.view.MyViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollbars="none">

        </com.moxi.calendar.view.MyViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack" />
    </LinearLayout>

    <com.mx.mxbase.view.LinerlayoutInter
        android:id="@+id/add_events_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/add_new_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:drawableTop="@mipmap/add_logo"
        android:drawablePadding="10dp"
        android:background="@drawable/white_to_font"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/moxi_text_size_18"
        android:textColor="@color/colorBlack"
        android:text="添加新事件"/>

</LinearLayout>
