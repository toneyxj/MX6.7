<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_set"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/set_month"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="bottom"
        android:gravity="right"
        android:layout_marginLeft="10dp"
        android:text="6"/>
    <TextView
        android:id="@+id/show_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/moxi_text_size_20"
        android:textColor="@color/colorBlack"
        android:layout_gravity="bottom"
        android:text="月"/>
    <TextView
        android:id="@+id/set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/moxi_text_size_20"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_horizontal"
        android:text="星期二\n6:30"/>
    <RelativeLayout
        android:id="@+id/line_and_date_layout"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent">
        <View
            android:id="@+id/line_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp">
        <ImageView
            android:id="@+id/show_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arc_di_black"/>
            <TextView
                android:id="@+id/date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/moxi_text_size_26"
                android:textColor="@color/colorWihte"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="28"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="起床去练习"
            android:textSize="@dimen/moxi_text_size_22"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备注："
            android:textSize="@dimen/moxi_text_size_16"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorGray"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>