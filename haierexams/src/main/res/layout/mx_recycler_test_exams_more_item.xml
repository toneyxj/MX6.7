<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rectangle"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_exams_item_title"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:lineSpacingExtra="14dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="2015-2016学年山东省青岛市高一上学期检测试题"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/moxi_text_size_22" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <ImageView
            android:id="@+id/state_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@mipmap/mx_img_practice_done" />

        <TextView
            android:id="@+id/tv_exams_item_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:visibility="invisible"
            android:paddingRight="10dp"
            android:background="@color/colorBlack"
            android:gravity="center"
            android:text="查看解析"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_22"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_exams_item_subject"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_marginTop="11dip"
        android:layout_marginBottom="17dip"
        android:text="数学"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/moxi_text_size_24" />
</LinearLayout>