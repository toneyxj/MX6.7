<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/title_rel"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/jiajian_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhankai_icon"
            />
        <TextView
            android:id="@+id/zhangjie_text"
            android:layout_toRightOf="@+id/jiajian_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:text="第一章"
            android:textSize="@dimen/moxi_text_size_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:layout_toRightOf="@+id/zhangjie_text"
            android:layout_centerVertical="true"
            android:text="kjahskadhsdhadsahkd"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:id="@+id/content_zhangjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/title_rel"
        android:id="@+id/content_rel"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

</RelativeLayout>