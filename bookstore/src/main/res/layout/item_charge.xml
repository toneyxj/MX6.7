<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="166dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/charge_item_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/balence"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/goldbalence_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="34sp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@id/iv"
                android:layout_marginLeft="20dp"
                android:text="1000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/goldbalence_tv"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:text="金铃铛"/>
            <TextView
                android:id="@+id/mony_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="26sp"
                android:text="¥ 10"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/goldbalence_tv"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/gift_tv"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="27sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorWihte"
            android:text="赠送100银铃铛" />
    </RelativeLayout>
</RelativeLayout>