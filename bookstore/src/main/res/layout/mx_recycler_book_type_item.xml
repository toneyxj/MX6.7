<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/img_recycler_item_book_type"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@mipmap/file_epub"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_recycler_item_book_type"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="238dp"
        android:background="@drawable/moxi_shape_blace_light"
        android:gravity="center"
        android:lines="1"
        android:text="dasd"
        android:textColor="@color/colorWihte"
        android:textSize="@dimen/moxi_text_size_22" />
    <ImageView
        android:id="@+id/tui_jian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:visibility="invisible"
        android:src="@mipmap/tui_jian"/>
</RelativeLayout>