<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dotted_line"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/sort_name"
        android:layout_width="match_parent"
        android:background="@drawable/white_to_font"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_index_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@mipmap/write_draw_current_status" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="@string/sort_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_18" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_to_font"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_index_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@mipmap/write_draw_current_status" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="@string/sort_big"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_18" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_to_font"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_index_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@mipmap/write_draw_current_status" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="@string/sort_type"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_18" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_to_font"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_index_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@mipmap/write_draw_current_status" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="@string/sort_create_time"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_18" />
    </LinearLayout>
</LinearLayout>