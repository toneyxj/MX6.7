<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWihte">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:onClick="goBack">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mx_img_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/title"
                style="@style/book_title"
                android:text="网上书城"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/my_acont_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            style="@style/book_title"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="goMyActivity"
            android:text="我的账户"/>
        <RelativeLayout
            android:id="@+id/search_rl"
            android:layout_width="@dimen/search_width"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/my_acont_tv"
            android:clickable="true"
            android:onClick="searchBook"
            android:background="@drawable/shape_search_bg">
            <TextView
                android:id="@+id/tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                style="@style/book_author"
                android:text="搜索图书" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/mx_img_read_library_search"
                android:layout_toLeftOf="@id/tv"/>
        </RelativeLayout>

    </RelativeLayout>
    <com.mx.mxbase.view.SildeFrameLayout
        android:id="@+id/move_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <ExpandableListView
        android:id="@+id/catetory_list"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:listSelector="@color/colorWihte"
        android:background="@null"/>
        <TextView
            android:id="@+id/page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="1/2"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/page_index_size"/>
    </com.mx.mxbase.view.SildeFrameLayout>
    <include
        android:id="@+id/error_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/error_reflash_layout"
        />
</LinearLayout>
