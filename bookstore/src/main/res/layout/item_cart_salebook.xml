<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_ly"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="30dp">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@drawable/check_box"
            android:checked="false"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/book_ico"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/error" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/book_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/book_title"
                        android:text="book title" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/book_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_content"
                            android:text="作者：" />

                        <TextView
                            android:id="@+id/author_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_content"
                            android:text="Arthur" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_price"
                            android:text="销价:" />

                        <TextView
                            android:id="@+id/pro_price_tv"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_price"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="￥9.90" />

                        <TextView
                            style="@style/book_author"
                            android:layout_width="wrap_content"
                            android:visibility="invisible"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_price"
                            android:text="原价:" />

                        <TextView
                            android:id="@+id/org_price_tv"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_price"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="￥19.90" />

                        <View
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/pro_qutity_tv"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dip"
                            android:text="1" />

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/book_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="本" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="30dp"
                android:background="#808080"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>