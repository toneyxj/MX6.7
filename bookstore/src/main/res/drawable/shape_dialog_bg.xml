<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <corners android:radius="5dp" /><!-- 圆角半径 -->

        <stroke
            android:width="1dp"
            android:color="#0000ff" /><!--矩形的边线  -->

        <size
            android:width="400dp"
            android:height="440dp" /><!--矩形的宽高  -->

        <gradient
            android:endColor="#ffffff"
            android:startColor="#ffffff" /><!-- 矩形的内部颜色，这里设置成白色，即空心 -->
        <padding android:bottom="0dp"
            android:top="0dp"
            android:right="0dp"
            android:left="0dp"/>
</shape>