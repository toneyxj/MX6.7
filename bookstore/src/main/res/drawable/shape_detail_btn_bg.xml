<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle">

<corners android:radius="30dp" /><!-- 圆角半径 -->

<stroke
    android:width="1dp"
    android:color="#0000ff" /><!--矩形的边线  -->

<size
    android:width="100dp"
    android:height="40dp" /><!--矩形的宽高  -->

<gradient
    android:endColor="#404040"
    android:startColor="#404040" /><!-- 矩形的内部颜色，这里设置成白色，即空心 -->
<padding android:bottom="5dp"
    android:top="5dp"
    android:right="5dp"
    android:left="5dp"/>
</shape>