<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWihte"
    android:orientation="vertical"
    android:weightSum="5.5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_setting_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/mx_img_logo_2" />

        <TextView
            android:id="@+id/tv_setting_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_setting_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Topsir H68"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_28" />

        <LinearLayout
            android:id="@+id/ll_setting_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_setting_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setting_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_setting_logo"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_28" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_setting_logo"
                android:text="版本号:V0.1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_28" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="@dimen/height_50"
            android:layout_below="@id/ll_setting_version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_setting_online_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_centerInParent="true"
                android:background="@drawable/moxi_shape_gray_corner"
                android:gravity="center"
                android:text="在线升级"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_28" />

            <TextView
                android:id="@+id/update_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/moxi_shape_black_corner"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorWihte"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="@color/colorBlack"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/colorWihte"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_setting_wifi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/seeting_img_item"
                    android:layout_height="@dimen/seeting_img_item"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mx_img_setting_wifi"
                    android:id="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Wi-Fi"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />

                <TextView
                    android:id="@+id/tv_setting_wifi_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/moxi_shape_grayish_corner"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/ll_setting_sound"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginTop="30dp"-->
                    <!--android:src="@mipmap/mx_img_setting_sound" />-->
                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/seeting_img_item"
                    android:layout_height="@dimen/seeting_img_item"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/white_to_font"
                    android:src="@mipmap/img_mx_new68_defate_icon" />

                <TextView
                    android:id="@+id/signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lines="4"
                    android:ellipsize="end"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />

            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/ll_setting_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/seeting_img_item"
                    android:layout_height="@dimen/seeting_img_item"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mx_img_setting_save" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="存储"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />

                <TextView
                    android:id="@+id/tv_cun_chu_info"
                    android:layout_width="wrap_content"
                    android:minWidth="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/moxi_shape_grayish_corner"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="正在计算"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/colorWihte"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_setting_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/seeting_img_item"
                    android:layout_height="@dimen/seeting_img_item"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginTop="50dp"
                    android:src="@mipmap/mx_img_setting_input" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="语言输入法"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/moxi_shape_grayish_corner"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/ll_setting_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/seeting_img_item"
                    android:layout_height="@dimen/seeting_img_item"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mx_img_setting_date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="日期和时间"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/moxi_shape_grayish_corner"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/colorWihte"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_setting_help"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/seeting_img_item"
                    android:layout_height="@dimen/seeting_img_item"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_new_show" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="显示"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/moxi_shape_grayish_corner"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:id="@+id/ll_setting_feedback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/seeting_img_item"
                    android:layout_height="@dimen/seeting_img_item"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginTop="50dp"
                    android:src="@mipmap/mx_img_setting_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="其他"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/moxi_shape_grayish_corner"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/moxi_text_size_28"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>