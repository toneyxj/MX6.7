<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/mx_base_title_layout" />

    <GridView
        android:id="@+id/grid_view_hj_book_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d7d7d7"
        android:numColumns="3"
        android:overScrollMode="never"
        android:verticalSpacing="6dp"></GridView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#d7d7d7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_book_index_page_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_to_font"
                android:padding="20dp"
                android:src="@mipmap/img_hj_page_left_no" />

            <TextView
                android:id="@+id/tv_page_index"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1/1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_26" />

            <ImageView
                android:id="@+id/img_book_index_page_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_to_font"
                android:padding="20dp"
                android:src="@mipmap/img_hj_page_right_have" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>