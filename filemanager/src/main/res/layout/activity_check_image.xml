<?xml version="1.0" encoding="utf-8"?>
<com.mx.mxbase.view.LinerlayoutInter xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout_view"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/show_iamge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/show_image_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/show_index_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:textSize="@dimen/moxi_text_size_20"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>

</com.mx.mxbase.view.LinerlayoutInter>
