<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/di_white_bian_font"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:padding="10dp"
        android:text="保存笔记"
        android:textStyle="bold"
        android:textColor="@color/colorWihte"
        android:textSize="@dimen/moxi_text_size_22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="笔记名称:"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="@dimen/moxi_text_size_20" />

    <EditText
        android:id="@+id/input_new_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/arc_big_di_white_bian_font"
        android:hint="新文档"
        android:textColorHint="@color/colorGray"
        android:padding="12dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/moxi_text_size_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qiut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWihte"
            android:gravity="center"
            android:text="取消"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_20" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <Button
            android:id="@+id/insure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWihte"
            android:gravity="center"
            android:text="确定"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_20" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <Button
            android:id="@+id/discard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWihte"
            android:gravity="center"
            android:textStyle="bold"
            android:text="丢弃"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_20" />
    </LinearLayout>

</LinearLayout>